<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
	<head>
		<title><%= title %> - RockyLearningCS</title>
		<link rel='stylesheet' href='/css/bootstrap.css' />
		<style type="text/css">
			body {
				padding-top: 0px;
				padding-bottom: 40px;
			}
		</style>
		<link rel="stylesheet" href="/css/bootstrap-theme.css"/>
	</head>
	
	<body>

		<nav class="navbar navbar-inverse" role="navigation">
		  <div class="container-fluid">
		  
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		    	<a class="navbar-brand" href="/">Rocky爱学CS</a>
		      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		    </div>
		
		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">
		        <li><a href="/"><span class="glyphicon glyphicon-home"></span> 首页</a></li>
						<% if (!locals.user) { %>
							<li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> 登入</a></li>
							<li><a href="/reg"><span class="glyphicon glyphicon-pencil"></span> 注册</a></li>
		      	<% } else { %>
		      		<li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> 登出</a></li>
		      	<% }%>
		      </ul>
		    </div><!-- /.navbar-collapse -->
		    
		  </div><!-- /.container-fluid -->
		</nav>

		<% if (locals.success) { %>
			<div id="alt_success" class="alert alert-success">
				<%= success %>
			</div>
		<% } %>
		
		<% if (locals.error) { %>
			<div id="alt_warning" class="alert alert-warning">
				<%= error %>
			</div>
		<% } %>

		<!-- body -->
		<div id="container" class="container">
			<% if (user) { %>
				<% include say %>
			<% } %>	